<div class="global-wrapper">
  <div class="global-inner">

    <div class="header-wrapper">
      <div class="header-inner">
        <%=this.getBlock('header') %>
      </div>
    </div>
  
    <div class="body-wrapper">
      <div class="body-inner container">
        <div class="row">
          <aside class="left-wrapper span3">
            <div class="left-inner">
              <%=this.getBlock('left') %>
            </div>
          </aside>

          <section class="main-wrapper span9">
            <div class="main-inner" bind="content">
            </div>
          </section>
        </div>
      </div>
    </div>

    <div class="footer-wrapper">
      <div class="footer-inner">
        <b name="footer">
          <%=this.getBlock('footer') %>
        <!-- Footer block content will be placed here -->
        </b>
      </div>
    </div>

  </div>
</div>